<Window x:Class="ImageGallery.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Folder Pattern" 
        Height="180" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#2B2B2B"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Enter folder name pattern to search for:" 
                   Foreground="White" 
                   FontSize="14"
                   Margin="0,0,0,10"/>
        
        <TextBlock Grid.Row="1" 
                   Text="(e.g., 'images' or 'photos'; leave empty for all subdirectories)" 
                   Foreground="#888888" 
                   FontSize="11"
                   Margin="0,0,0,10"/>

        <TextBox x:Name="InputTextBox" 
                 Grid.Row="2"
                 FontSize="14"
                 Padding="5"
                 VerticalContentAlignment="Center"
                 Background="#1E1E1E"
                 Foreground="White"
                 BorderBrush="#555555"
                 BorderThickness="1"
                 Margin="0,0,0,15"
                 IsEnabled="True"
                 Focusable="True"
                 CaretBrush="White"
                 SelectionBrush="#0078D7"
                 SelectionTextBrush="White"/>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="OK" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="OkButton_Click"
                    IsDefault="True"
                    Background="#0E639C"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="13"/>
            <Button Content="Cancel" 
                    Width="80" 
                    Height="30"
                    Click="CancelButton_Click"
                    IsCancel="True"
                    Background="#3E3E3E"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="13"/>
        </StackPanel>
    </Grid>
</Window>
